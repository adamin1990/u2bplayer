<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <com.ijiaban.tabslide.PagerSlidingTabStrip
        android:id="@+id/tabsrateandrelative"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/background_tab" />
<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adlayoutrateandrelative"
        android:layout_below="@+id/tabsrateandrelative"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/rageandrelitavepager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/adlayoutrateandrelative"
        android:background="#f2dcdc" />
    



</RelativeLayout>


